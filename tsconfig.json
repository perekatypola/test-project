{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "module": "commonjs",
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "@app/constants/*": ["src/сonstants/*"],
      "@app/constants": ["src/сonstants/index.ts"],
      "screens/*": ["src/сontainers/screens/*"],
      "navigation/*": ["src/сontainers/navigation/*"],
      "store/*": ["src/store/*"],
      "interfaces/*": ["src/interfaces/*"],
      "configs/*": ["src/сonfigs/*"]
    },
    "typeRoots": ["./src/types"]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
